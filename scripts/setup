#!/bin/bash

sudo bash -c "apt-get update -y; apt-get upgrade; dpkg-reconfigure tzdata; apt-get install -y ca-certificates curl; snap install multipass"
# init multipass VMs
multipass launch --name rhizome --cpus 2 --mem 2048M --disk 20GB
multipass launch --name node1 --cpus 2 --mem 3072M --disk 60GB
multipass launch --name node2 --cpus 2 --mem 3072M --disk 60GB

exec bash
